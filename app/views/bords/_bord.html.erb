<div class="card">
  <div class="card-header">
    <h4><%= board.title %></h4>
    <% bord.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(bord.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= bord.name %></p>
  </div>
</div>