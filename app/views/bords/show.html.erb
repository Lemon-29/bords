<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to '一覧', bords_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集', edit_bord_path(@bord), class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>
<%= render @bord %>

<div class="p-comment__list">
  <div class="p-comment__listTitle">コメント</div>
  <%= render @bord.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment } %>